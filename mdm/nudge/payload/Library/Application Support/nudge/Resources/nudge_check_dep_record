#!/usr/bin/python
import os
import plistlib
import subprocess


def has_dep_activation_record(plist_path):
    # We can't use -o stdout-xml due to another Apple bug :)
    if os.path.exists(plist_path):
        os.remove(plist_path)
    cmd = ['/usr/bin/profiles', '-e', '-o', plist_path]
    run = subprocess.Popen(cmd, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    output, err = run.communicate()
    if err:
        return False
    try:
        plist = plistlib.readPlist(plist_path)
    except:  # noqa
        plist = {}
    if not plist:
        return False
    else:
        return True


def main():
    dot_path = '/private/var/tmp/nudge/.check_dep_record'
    main_nudge_path = '/Library/Application Support/nudge'
    plist_path = os.path.join(main_nudge_path, 'Resources/dep_record.plist')
    if has_dep_activation_record(plist_path):
        print 'Has DEP activation record - True'
    else:
        print 'Has DEP activation record - False'

    # Stop this from happening all the time
    if os.path.exists(dot_path):
        os.remove(dot_path)


if __name__ == '__main__':
    main()
